<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.catalog.CatalogFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srlCatalogRefresher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <AutoCompleteTextView
                android:id="@+id/actvSearch"
                android:hint="@string/find_search_placeholder"
                android:completionThreshold="1"
                android:layout_margin="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:completionHint="@string/find_search_placeholder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/flCatalogFragment"
                android:layout_width="match_parent"
                android:imeOptions="actionSearch"
                android:imeActionLabel="Search"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:layout_height="wrap_content"/>


            <FrameLayout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/actvSearch"
                android:id="@+id/flCatalogFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/btnCatalogAddItem"
        app:layout_constraintBottom_toBottomOf="@id/srlCatalogRefresher"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/catalog_add_item_sign"
        android:background="@drawable/round_btn"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:paddingBottom="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>